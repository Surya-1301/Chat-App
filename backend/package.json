{
  "name": "chat-app-server",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API server for Chat App (Express + Socket.IO)",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon src/index.js",
